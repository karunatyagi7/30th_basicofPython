#write a python program for drawing national flags of india, pakistan, china , america , aurstrilia

#India
import turtle

turtle.speed(0)
turtle.hideturtle()
turtle.penup()
turtle.goto(-200, 100)
turtle.pendown()
turtle.color('saffron')
turtle.begin_fill()
turtle.forward(400)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.forward(400)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.end_fill()

turtle.penup()
turtle.goto(-100, 0)
turtle.pendown()
turtle.color('dark green')
turtle.begin_fill()
turtle.forward(200)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.end_fill()

turtle.penup()
turtle.goto(-100, 0)
turtle.pendown()
turtle.color('white')
turtle.begin_fill()
turtle.forward(50)
turtle.right(90)
turtle.forward(50)
turtle.right(90)
turtle.forward(50)
turtle.right(90)
turtle.forward(50)
turtle.right(90)
turtle.end_fill()

turtle.penup()
turtle.goto(-100, 0)
turtle.pendown()
turtle.color('navy blue')
turtle.begin_fill()
turtle.forward(50)
turtle.right(90)
turtle.forward(100)
turtle.right(90)
turtle.forward(50)
turtle.right(90)
turtle.forward(100)
turtle.right(90)
turtle.end_fill()

