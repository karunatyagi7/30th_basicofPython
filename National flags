#America

turtle.penup()
turtle.goto(-200, -200)
turtle.pendown()
turtle.color('blue')
turtle.begin_fill()
turtle.forward(400)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.forward(400)
turtle.right(90)
turtle.forward(200)
turtle.right(90)
turtle.end_fill()

turtle.penup()
